{
	"compilerOptions": {
		"module": "commonjs",
		// "module": "es6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"lib": ["es2017"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
}